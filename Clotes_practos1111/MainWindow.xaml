<Window x:Class="Clotes_practos1111.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clotes_practos1111"
        mc:Ignorable="d"
        Title="Магазин одежды" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="EmployeesDataGrid" Visibility="Visible"/>

        <DataGrid x:Name="ClothesDataGrid" Visibility="Collapsed"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1">
            <Button Content="Таблица сотрудиков" Click="ShowEmployess_Click"/>
            <Button Content="Таблица товаров" Click="ShowClothes_Click"/>
        </StackPanel>
    </Grid>
</Window>